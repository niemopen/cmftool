<?xml version="1.0" encoding="UTF-8"?>
<xs:schema 
    ct:conformanceTargets="http://reference.niem.gov/niem/specification/naming-and-design-rules/4.0/#ExtensionSchemaDocument"
    targetNamespace="http://example.com/codes/"
    xmlns:ns="http://example.com/codes/" 
    xmlns:structures="http://release.niem.gov/niem/structures/5.0/"
    xmlns:xs="http://www.w3.org/2001/XMLSchema" 
    xmlns:ct="http://release.niem.gov/niem/conformanceTargets/4.0/" 
    elementFormDefault="qualified">

    <xs:import namespace="http://release.niem.gov/niem/structures/5.0/"
        schemaLocation="niem/utility/structures.xsd"/>

    <xs:simpleType name="TestCodeSimpleType">
        <xs:restriction base="xs:token">
            <xs:enumeration value="1">
                <xs:annotation>
                    <xs:documentation>Fatal Accident</xs:documentation>
                </xs:annotation>
            </xs:enumeration>
            <xs:enumeration value="2">
                <xs:annotation>
                    <xs:documentation>Incapacitating Injury Accident</xs:documentation>
                </xs:annotation>
            </xs:enumeration>
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="TestCodeType">
        <xs:simpleContent>
            <xs:extension base="ns:TestCodeSimpleType">
                <xs:attributeGroup ref="structures:SimpleObjectAttributeGroup"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

</xs:schema>
